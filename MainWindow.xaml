<Window x:Class="DataTableWPFExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataTableWPFExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>
        <!-- elements -->
        <Label Grid.Row="0" Grid.Column="0" Content="Query:"/>
        <TextBox x:Name="queryTextBox" Grid.Row="1" TextWrapping="Wrap" Grid.Column="0"/>
        <Button Grid.Row="2" Grid.Column="0" Content="Run" x:Name="runBtn" Click="runBtn_Click"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Result:"/>
        <DataGrid Grid.Row="4" Grid.Column="0" x:Name="resultDataGrid"/>


    </Grid>
</Window>
